{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": ["airbnb-base", "prettier"],
    "plugins": ["prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "class-methods-use-this": "off",
        "prettier/prettier": "error",
        "import/no-named-as-default-member": "off",
        "import/no-named-as-default": "off",
        "import/no-cycle": "off",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "_"
            }
        ]
    }
}
